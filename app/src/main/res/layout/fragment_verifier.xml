<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffff"
                tools:context="com.rubyhuntersky.peregrine.VerifierFragment">

    <EditText
        android:id="@+id/edittext_verifier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:hint="@string/paste_verifier"/>

    <Button
        android:id="@+id/button_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edittext_verifier"
        android:layout_below="@+id/edittext_verifier"
        android:text="Continue"
        tools:ignore="HardcodedText"/>
</RelativeLayout>
